@page
@model Medisysnae.Pages.Pacientes.CreateModel
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Paciente.Nombre" class="control-label"></label>
                <input asp-for="Paciente.Nombre" class="form-control" />
                <span asp-validation-for="Paciente.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Apellido" class="control-label"></label>
                <input asp-for="Paciente.Apellido" class="form-control" />
                <span asp-validation-for="Paciente.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Dni" class="control-label"></label>
                <input asp-for="Paciente.Dni" class="form-control" />
                <span asp-validation-for="Paciente.Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Domicilio" class="control-label"></label>
                <input asp-for="Paciente.Domicilio" class="form-control" />
                <span asp-validation-for="Paciente.Domicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Telefono" class="control-label"></label>
                <input asp-for="Paciente.Telefono" class="form-control" />
                <span asp-validation-for="Paciente.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Obrasocial" class="control-label"></label>
                <select asp-for="Paciente.Obrasocial.ID" class="form-control" asp-items="@Model.ObraSocialList">
                    <option value="">Seleccionar</option>
                </select>
                <span asp-validation-for="Paciente.Obrasocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.NroAfiliado" class="control-label"></label>
                <input asp-for="Paciente.NroAfiliado" class="form-control" />
                <span asp-validation-for="Paciente.NroAfiliado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Comentario" class="control-label"></label>
                <input asp-for="Paciente.Comentario" class="form-control" />
                <span asp-validation-for="Paciente.Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Mail" class="control-label"></label>
                <input asp-for="Paciente.Mail" class="form-control" />
                <span asp-validation-for="Paciente.Mail" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
