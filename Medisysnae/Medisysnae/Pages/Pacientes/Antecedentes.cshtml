@page
@model Medisysnae.Pages.Pacientes.AntecedentesModel
@{
    ViewData["Title"] = "Antecedentes";
}

<h1>@Model.Paciente.ApellidoNombre</h1>

<div class="form-group">
    <input type="submit" value="Guardar" class="btn btn-primary" />|
    <a asp-page="./Index">Cancelar</a>
</div>
<br />
<table style="width:50%">
    <tbody>

        @foreach (var item in Model.Antecedentes)
        {
            <tr>
                <td>
                    @if (item.EsListaOpciones)
                    {
                        <input type="checkbox" />@item.Descripcion
                    }
                    else if (item.EsTitulo)
                    {
                        <p></p>
                        <h3>@Html.DisplayFor(modelItem => item.Descripcion)</h3>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    }
                </td>
                @if (!item.EsListaOpciones && !item.EsTitulo)
                {
                    if (item.EsTextArea)
                    {
                        <td>
                            <textarea style="width:100%"></textarea>
                        </td>
                    }
                    else
                    {
                        <td>
                            <input type="text" />
                        </td>
                    }
                }
            </tr>
        }

    </tbody>
</table>
